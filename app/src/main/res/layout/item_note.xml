<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/list_horizontal_margin"
        android:layout_marginVertical="@dimen/list_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/list_horizontal_margin"
            android:layout_marginVertical="@dimen/list_vertical_margin"
            android:background="@android:color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/note_created"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackground"
                android:textAlignment="viewEnd"
                tools:text="Дата создания" />

            <TextView
                android:id="@+id/note_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/note_vertical_margin"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                tools:text="Название заметки" />

            <TextView
                android:id="@+id/note_description"
                android:layout_width="match_parent"
                android:layout_height="@dimen/note_height"
                android:textSize="20sp"
                tools:text="Текст заметки"></TextView>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


</FrameLayout>
